<%- include ('partials/nav') %>

<div class="breadcrumbs">
    <div class="container">
        <a href="/shop">Home</a>
        <i class="fa fa-chevron-right breadcrumb-separator"></i>
        <span>Shop</span>
        <i class="fa fa-chevron-right breadcrumb-separator"></i>
        <span><%= prod.dataValues.title %></span>
    </div>
</div>

<div class="product-section container">
    <div class="product-section-image">
        <img src="<%= prod.dataValues.image %>" alt="" />
    </div>
    <div class="product-section-information">
        <h1 class="product-section-title"><%= prod.dataValues.title %></h1>
        <div class="product-section-price"><%= prod.dataValues.price %></div>

        <p><%= prod.dataValues.description %></p>

        <form action="/product/<%= prod.dataValues.id %>" method="POST">
            <input class="button" value="Ajouter au panier" type="submit">
        </form>
    </div>
</div>

<%- include ('partials/foot') %>
