<%- include ('partials/nav') %>

<div class="breadcrumbs">
    <div class="container">
        <a href="/shop">Home</a>
        <i class="fa fa-chevron-right breadcrumb-separator"></i>
        <span>Shop</span>
    </div>
</div>

<div class="products-section container">
    <div class="sidebar">

        <h3 class="mt-3">Les cat√©gories</h3>

        <ul>
            <!-- todo - Dynamiser cette liste -->

          <%  categories.map(category => { %>

            <li>
                <a href="/category/<%= category.dataValues.id %>"> <%= category.dataValues.name %> </a>
            </li>

            <%  }) %>
 
        </ul>
    </div>

    <div>
        <div class="products text-center">

            <!-- todo - dynamiser cette liste -->

            <% products.map(product => { %>

            <div class="product">
                <a href="/product/<%= product.dataValues.id %>">
                    <img src="<%= product.dataValues.image %>" alt="<%= product.dataValues.title %>" />
                </a>
                <a href="/product/<%= product.dataValues.id %>">
                    <div class="product-name"><%= product.dataValues.title %></div>
                </a>
                <div class="product-price"><%= product.dataValues.price %></div>
            </div>

            <% }) %>


        </div>
    </div>
</div>

<% include ('partials/foot') %>
